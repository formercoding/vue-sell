@media (-webkit-min-device-pixel-ration: 1.5),(min-device-pixel-ration: 1.5)
  .border-1px
	  &::after
	  	-webkit-transform: scaleY(0.7)
	  	transform: scaleY(0.7)

@media (-webkit-min-device-pixel-ration: 2.0),(min-device-pixel-ration: 2.0)
  .border-1px
	  &::after
	  	-webkit-transform: scaleY(0.7)
	  	transform: scaleY(0.7)
body, html
	line-height 1
	font-weight 200
	font-family 'PingFang SC', 'STHeitiSC-Light', 'Helevtical-Light'
.clearfix
	display inline-block
	&:after
		content ''
		display block
		height 0
		line-height 0
		clear both
		visibility hidden
  	
